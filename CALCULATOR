#include <stdio.h>

void main() {
    char op;
    int a, b, res;

    printf("Enter two operands: ");
    scanf("%d %d", &a, &b);

    printf("Enter an operator (+, -, *, /): ");
    scanf(" %c", &op); // Note the space before %c

    switch (op) {
        case '+':
            res = a + b;
            printf("%d + %d = %d\n", a, b, res);
            break;
        case '-':
            res = a - b;
            printf("%d - %d = %d\n", a, b, res);
            break;
        case '*':
            res = a * b;
            printf("%d * %d = %d\n", a, b, res);
            break;
        case '/':
        res = a / b;
                printf("%d / %d = %d\n", a, b, res);
            
            break;
        default:
            printf("Wrong choice\n");
    }
}
